<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

        <services>
            <service id="mxc_dropship.subscriber.backend_order"
                     class="MxcDropship\Subscribers\BackendOrderSubscriber">
                <tag name="shopware.event_subscriber"/>
            </service>

            <service id="mxc_dropship.subscriber.backend_article"
                     class="MxcDropship\Subscribers\BackendArticleSubscriber">
                <tag name="shopware.event_subscriber"/>
            </service>

            <service id="mxc_dropship.subscriber.frontend_detail"
                     class="MxcDropship\Subscribers\FrontendDetailSubscriber">
                <tag name="shopware.event_subscriber"/>
            </service>

            <service id="mxc_dropship.subscriber.checkout"
                     class="MxcDropship\Subscribers\CheckoutSubscriber">
                <tag name="shopware.event_subscriber"/>
            </service>

            <service id="mxc_dropship.cronjob.price_update"
                     class="MxcDropship\Cronjobs\PriceUpdateCronJob">
                <tag name="shopware.event_subscriber"/>
            </service>

            <service id="mxc_dropship.cronjob.stock_update"
                     class="MxcDropship\Cronjobs\StockUpdateCronJob">
                <tag name="shopware.event_subscriber"/>
            </service>

            <service id="mxc_dropship.cronjob.order_send"
                     class="MxcDropship\Cronjobs\OrderSendCronJob">
                <tag name="shopware.event_subscriber"/>
            </service>

            <service id="mxc_dropship.cronjob.delete_logs"
                     class="MxcDropship\Cronjobs\DeleteLogsCronJob">
                <tag name="shopware.event_subscriber"/>
            </service>


            <service id="mxc_dropship.cronjob.tracking_data_update"
                     class="MxcDropship\Cronjobs\TrackingDataUpdateCronJob">
                <tag name="shopware.event_subscriber"/>
            </service>

            <service id="mxc_dropship.subscriber.templates"
                     class="MxcDropship\Subscribers\TemplateRegistration">
                <argument>%mxc_dropship.plugin_dir%</argument>
                <argument type="service" id="template"/>
                <tag name="shopware.event_subscriber"/>
            </service>
        </services>
</container>
